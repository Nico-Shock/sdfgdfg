Debian: sudo apt install qemu-kvm libvirt-daemon-system libvirt-clients bridge-utils virt-manager dnsmasq vde2 netcat-openbsd && sudo systemctl enable libvirtd && sudo systemctl start libvirtd && sudo adduser $USER kvm && sudo adduser $USER libvirt && sudo virsh net-start default && sudo virsh net-autostart default
