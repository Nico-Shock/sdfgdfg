#include <windows.h>
#include <string>
#include <iostream>

int main() {
    std::string input;
    std::cout << "1. Activate\n2. Deactivate\n";
    std::getline(std::cin, input);

    if (input == "1") {
        std::wstring command = L"Set-ExecutionPolicy RemoteSigned -Scope CurrentUser; net user administrator /active:yes";
        std::wstring cmd = L"powershell.exe -Command \"" + command + L"\"";
        ShellExecute(NULL, L"runas", cmd.c_str(), NULL, NULL, SW_SHOW);
    } else if (input == "2") {
        std::wstring command = L"Set-ExecutionPolicy RemoteSigned -Scope CurrentUser; net user administrator /active:no";
        std::wstring cmd = L"powershell.exe -Command \"" + command + L"\"";
        ShellExecute(NULL, L"runas", cmd.c_str(), NULL, NULL, SW_SHOW);
    }
    return 0;
}
