#include <windows.h>
#include <string>
#include <iostream>

int main() {
    std::string input;
    std::cout << "1. Activate\n2. Deactivate\n";
    std::getline(std::cin, input);

    if (input == "1") {
        std::wstring command = L"net user administrator /active:yes";
        std::wstring cmd = L"cmd.exe /c " + command;
        ShellExecute(NULL, L"runas", L"cmd.exe", L"/c " + cmd.c_str(), NULL, SW_SHOW);
    } else if (input == "2") {
        std::wstring command = L"net user administrator /active:no";
        std::wstring cmd = L"cmd.exe /c " + command;
        ShellExecute(NULL, L"runas", L"cmd.exe", L"/c " + cmd.c_str(), NULL, SW_SHOW);
    }
    return 0;
}
